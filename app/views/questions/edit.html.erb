<div class="edit-form edit-question-form">
<h3>Edit Question</h3>
<%= semantic_form_for @question do |f| %>
  <%= f.inputs do %>
    <%= f.input :quiz_id, :include_blank => false, as: :select, collection: Quiz.pluck(:name, :id), label: 'Quiz', hint: 'Which quiz is this question associated with?' %>
    <%= f.input :name %>
    <%= f.input :body, input_html: { rows: 10 } %>
    <%= f.input :image, hint: 'Copy URL here' %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>

<% end %>
<%= link_to 'Delete Question', question_path(@question), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
</div>