<div class="edit-form edit-gear-form">
<h3>Edit Gear</h3>
<%= semantic_form_for @gear do |f| %>
  <%= f.inputs do %>
    <%= f.input :sport_id, as: :select, :include_blank => false, collection: Sport.pluck(:name, :id), label: 'Pick a sport' %>
    <%= f.input :title %>
    <%= f.input :body, input_html: { rows: 10 } %>
    <%= f.input :link %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>

<% end %>
<%= link_to 'Delete Gear', gear_path(@gear), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
</div>