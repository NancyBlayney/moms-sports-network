<div class="edit-form edit-sign-form">
<h3>Edit Sign</h3>
<%= semantic_form_for @sign do |f| %>
  <%= f.inputs do %>
    <%= f.input :sport_id, :include_blank => false, as: :select, collection: Sport.pluck(:name, :id), label: 'Pick a sport' %>
    <%= f.input :rule_id, :include_blank => false, as: :select, collection: Rule.pluck(:name, :id), label: 'Rule', hint: 'Which rule is this gif associated with?' %>
    <%= f.input :name %>
    <%= f.input :gif %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>

<% end %>
<%= link_to 'Delete Sign', sign_path(@sign), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
</div>