<%= semantic_form_for @query do |f| %>
  <%= f.inputs do %>
    <%= f.input :title %>
    <%= f.input :body %>
    	<% if current_member.admin == true %>
    		<%= f.input :approved %>
    	<% end %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>

<% end %>