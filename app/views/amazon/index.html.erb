<div class="container">
	<section>
		<%= form_tag("/amazon", method: "get", action: 'index') do %>
		  <%= label_tag(:amazon_search, "Search for:") %>
		  <%= text_field_tag(:amazon_search) %>
		  <%= submit_tag("Search") %>
		<% end %>	
		
		<div class="row">
			<div class="span12">
				<table class="table table-striped table-condensed">
					<thead>
						<tr style="background-color: #555; color: white">
							<th>Product Detail URL</th>
							<th>Title</th>
							<th>Price</th>
							<th>Image</th>
						</tr>
					</thead>
					<% if @res != nil %>
						<% @res.items.each do |item| %>
							<tr>
								<td><a href='<%= item.get ('DetailPageURL') %>'>Shop Now</a></td>
								<td><%= item.get('ItemAttributes/Title') %></td>
								<td><%= item.get('Offers/Offer/OfferListing/Price/FormattedPrice') %></td>
								<td><img src="<%= item.get('MediumImage/URL') %>"></td>
							</tr>
						<% end %>
					<% end %>
				</table>
			</div>
		</div>
	</section>
</div>
