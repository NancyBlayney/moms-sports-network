<div class="edit-form edit-sport-form">
<h3>Edit Sport</h3>
<%= semantic_form_for @sport do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :image, hint: "Copy the URL here"%>
    <%= f.input :description, as: :text, input_html: { rows: 10 } %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>

<% end %>
<%= link_to 'Delete Sport', sport_path(@sport), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
</div>