<div class="edit-form edit-garb-form">
<h3>Edit Garb</h3>
<%= semantic_form_for @garb do |f| %>
  <%= f.inputs do %>
    <%= f.input :sport_id, :include_blank => false, as: :select, collection: Sport.pluck(:name, :id), label: 'Pick a sport' %>
    <%= f.input :title %>
    <%= f.input :body, input_html: { rows: 10 } %>
    <%= f.input :link %>
  <% end %>
  
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>

<% end %>
<%= link_to 'Delete Garb', garb_path(@garb), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
</div>